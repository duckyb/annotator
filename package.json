{
  "name": "@net7/annotator",
  "version": "1.0.0",
  "description": "Anchoring and highlighting library for web documents",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "concurrently -n ROLLUP,BS \"rollup -c rollup.config.mjs -w\" \"browser-sync start --server --no-notify --no-open --files 'examples/*, dist/*.js' --startPath /examples\"",
    "dev": "yarn build && concurrently -k -n ROLLUP,BS -c 'bgBlue.bold,bgGreen.bold' \"yarn build --watch\" \"wait-on dist/index.js && browser-sync start --server --no-notify --files 'examples/*, dist/*.js' --startPath /examples\"",
    "build": "rollup -c rollup.config.mjs",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest",
    "prepare": "npm run build",
    "prettify": "prettier --write 'src/**/*.ts'"
  },
  "author": "Duccio Breschi <breschi@netseven.it>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "prettier": "^3.5.3",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.29.1",
    "wait-on": "^8.0.3"
  },
  "dependencies": {},
  "peerDependencies": {}
}
